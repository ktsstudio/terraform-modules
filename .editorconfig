root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{tf}]
charset = utf-8

[*.{tf}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[{.gitlab-ci.yml}]
indent_style = space
indent_size = 2

[{.terraform}/**]
indent_style = none
indent_size = none
end_of_line = none
trim_trailing_whitespace = none
charset = none
